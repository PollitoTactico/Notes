<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Notes.ViewModels"
             x:Class="Notes.Views.AboutPageJS">
    <ContentPage.BindingContext>
        <viewModels:AboutViewModelJS />
    </ContentPage.BindingContext>
    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout Spacing="10">
            <Image Source="papu.jpg"
                   SemanticProperties.Description="La cabraaaaa hola soy Jose Sanchez"
                   HeightRequest="64" />
            <Label FontSize="22" FontAttributes="Bold" Text="La cabraaaaa hola soy Jose Sanchez" VerticalOptions="End" />
            <Label FontSize="22" Text="Ya mismo se acaba la U" VerticalOptions="End" />
        </HorizontalStackLayout>

        <Label Text="HURRAAAAAA!!" />
        <Image Source="comedia.jpg" HeightRequest="64" VerticalOptions="Start" HorizontalOptions="Start"/>
        <Button Text="Hola :3" Command="{Binding ShowMoreInfoCommand}" />
    </VerticalStackLayout>

</ContentPage>